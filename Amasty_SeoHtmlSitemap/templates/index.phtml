<script>
    'use strict';

    function initSearchWrapper() {
        return {
            searchText: '',
            sitemapSearchChange: function () {
                this.$dispatch('am-sitemap-search-change', this.searchText.replace(/^\s+/, ''))
            },
            setText: function () {
                this.searchText = this.$event.target.value;
            }
        }
    }

    window.addEventListener('alpine:init', () => Alpine.data('initSearchWrapper', initSearchWrapper), {once: true})
</script>
