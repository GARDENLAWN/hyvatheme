declare(strict_types=1);

use Hyva\Theme\Model\ViewModelRegistry;
use Hyva\Theme\ViewModel\LucideIcons;
use Hyva\Theme\ViewModel\ProductPage;
use Magento\Framework\Escaper;
use Magento\Framework\View\Element\Template;

/** @var Template $block */
/** @var Escaper $escaper */
/** @var ViewModelRegistry $viewModels */

/** @var LucideIcons $lucideIcons */
$lucideIcons = $viewModels->require(LucideIcons::class);

$buttonLabel = $block->getData('is_cart_configure')
    ? __('Update item')
    : __('Add to Cart');

/** @var ProductPage $productViewModel */
$productViewModel = $viewModels->require(ProductPage::class);

$product = $productViewModel->getProduct();
$isCallForPrice = $product ? $product->getData('call_for_price') : false;

$contactUrl = $block->getUrl('contact');
if ($isCallForPrice && $product) {
    $subject = __('Inquiry for price: %1 (SKU: %2)', $product->getName(), $product->getSku());
    $contactUrl .= '?subject=' . rawurlencode((string)$subject);
}
?>

<?php if ($isCallForPrice): ?>
    <button
        type="button"
        class="btn btn-primary"
        id="product-addtocart-button"
        onclick="window.location.href='<?= $escaper->escapeUrl($contactUrl) ?>'"
    >
        <?= $lucideIcons->mailHtml('', 24, 24, ['aria-hidden' => 'true']); ?>
        <span class="hidden sm:block md:hidden lg:block"><?= $escaper->escapeHtml(__('Ask for price')) ?></span>
    </button>
<?php elseif (!$product->isSaleable()): ?>
    <?php
        $availabilitySubject = __('Inquiry about availability: %1 (SKU: %2)', $product->getName(), $product->getSku());
        $availabilityContactUrl = $block->getUrl('contact') . '?subject=' . rawurlencode((string)$availabilitySubject);
    ?>
    <button
        type="button"
        class="btn btn-primary"
        id="product-addtocart-button"
        onclick="window.location.href='<?= $escaper->escapeUrl($availabilityContactUrl) ?>'"
    >
        <?= $lucideIcons->mailHtml('', 24, 24, ['aria-hidden' => 'true']); ?>
        <span class="hidden sm:block md:hidden lg:block"><?= $escaper->escapeHtml(__('Ask about availability')) ?></span>
    </button>
<?php else: ?>
    <button
        type="submit"
        form="product_addtocart_form"
        aria-label="<?= $escaper->escapeHtmlAttr($buttonLabel) ?>"
        class="btn btn-primary"
        id="product-addtocart-button"
        data-addto="cart"
    >
        <?= $lucideIcons->shoppingCartHtml('', 24, 24, ['aria-hidden' => 'true']); ?>
        <span class="hidden sm:block md:hidden lg:block"><?= $escaper->escapeHtml($buttonLabel) ?></span>
    </button>
<?php endif; ?>

<?= $block->getChildHtml('', true) ?>
