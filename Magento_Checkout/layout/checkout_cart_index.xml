<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="shipping">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Checkout::php-cart/totals/shipping_custom.phtml</argument>
            </action>
        </referenceBlock>

        <!-- Move Coupon and Shipping Estimation to the left column (main cart container) -->
        <move element="checkout.cart.coupon" destination="checkout.cart" after="checkout.cart.form"/>
        <move element="checkout.cart.shipping" destination="checkout.cart" after="checkout.cart.coupon"/>
    </body>
</page>
