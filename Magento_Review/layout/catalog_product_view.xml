<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="review_list">
            <arguments>
                <argument name="show_avatar" xsi:type="boolean">true</argument> <!-- Show avatar of reviewer (true/false) -->
                <argument name="rating_star_size" xsi:type="number">20</argument> <!-- Rating start size, in px value -->
            </arguments>
        </referenceBlock>
    </body>
</page>
