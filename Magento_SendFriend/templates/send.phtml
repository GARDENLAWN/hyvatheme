            <script>
                function rowHandler() {
                    const recipients = <?= /** @noEscape */ $recipients ?>;

                    return {
                        fields: recipients.length === 0 ? [{name: '', email: ''}] : recipients,
                        plural: '<?= $escaper->escapeJs(__('Invitees')) ?>',
                        single: '<?= $escaper->escapeJs(__('Invitee')) ?>',
                        showAddNewFieldButton() {
                            return this.fields.length < <?= (int)$block->getMaxRecipients(); ?>;
                        },
                        addNewField() {
                            this.fields.push({
                                name: '',
                                email: ''
                            });
                        },
                        removeField() {
                            this.fields.splice(this.index, 1);
                        },
                        getRecipientsAsJson() {
                            return JSON.stringify(this.fields);
                        },
                        getRecipientsLabel() {
                            return this.fields.length > 1 ? this.plural : this.single
                        },
                        getRecipientFieldId() {
                            return `recipients-name${this.index}`;
                        },
                        getRecipientFieldName() {
                            return `recipients[name][${this.index}]`;
                        },
                        setName() {
                            this.field.name = this.$event.target.value;
                        },
                        getRecipientEmailFieldId() {
                            return `recipients-email${this.index}`
                        },
                        getRecipientFieldEmail() {
                            return `recipients[email][${this.index}]`;
                        },
                        setEmail() {
                            this.field.email = this.$event.target.value;
                        },
                        isRemoveFieldButtonDisabled() {
                            return this.fields.length <= 1;
                        },
                        getRemoveFieldButtonClasses() {
                            return {'opacity-25': this.isRemoveFieldButtonDisabled()}
                        },
                    }
                }

                function initSendFriendForm() {
                    return {
                        errors: 0,
                        hasCaptchaToken: 0,
                        displayErrorMessage: false,
                        errorMessages: [],
                        setErrorMessages(messages) {
                            this.errorMessages = [messages]
                            this.displayErrorMessage = this.errorMessages.length
                        },
                        submitForm() {
                            // Do not remove $form. The variable is used in the recaptcha child template.
                            const $form = document.querySelector('#product-sendtofriend-form');
                            if ($form.querySelectorAll('input[id^="recipients-email"]').length === 0) {
                                dispatchMessages([
                                    {
                                        type: "error",
                                        text: "<?= $escaper->escapeJs(
                                            __("Add one or more recipients before sending the message.")
                                        ) ?>"
                                    }
                                ], 10000);
                                return false;
                            }
                            <?= $recaptcha ? $recaptcha->getValidationJsHtml(ReCaptcha::RECAPTCHA_FORM_ID_SEND_FRIEND) : '' ?>

                            if (this.errors === 0) {
                                $form.submit();
                            }
                        },
                        historyBack() {
                            history.back();
                        }
                    }
                }

                window.addEventListener('alpine:init', () => {
                    Alpine.data('initSendFriendForm', initSendFriendForm);
                    Alpine.data('rowHandler', rowHandler);
                }, {once: true})
            </script>
