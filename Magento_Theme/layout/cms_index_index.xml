<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="Magento\Framework\View\Element\Template"
                   name="gardenlawn.website.switcher"
                   template="Magento_Theme::html/website_switcher.phtml"
                   before="-">
                <arguments>
                    <argument name="view_model" xsi:type="object">GardenLawn\Core\ViewModel\WebsiteSwitcher</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="head.additional">
            <block name="js.sticky.header" template="Magento_Theme::page/js/sticky-header.phtml">
                <arguments>
                    <argument name="hide_on_scroll_down" xsi:type="boolean">false</argument> <!-- Hide sticky header on scroll down (true/false) -->
                    <argument name="scroll_offset" xsi:type="number">100</argument> <!-- Offset before the helper reflects the scrollDir -->
                    <argument name="enable_css_only_sticky_style" xsi:type="boolean">true</argument> <!-- Enable CSS only solution (true/false) -->
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="js.scroll.helpers" template="Magento_Theme::page/js/scroll-helpers.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block name="accordion" template="Magento_Theme::elements/accordion/accordion.phtml">
                <arguments>
                    <argument name="multiselectable" xsi:type="boolean">false</argument> <!-- Allow multiple items to be open (true/false) -->
                    <argument name="divider" xsi:type="boolean">true</argument> <!-- Show divider (true/false) -->
                </arguments>

                <block name="accordion-item-1">
                    <arguments>
                        <argument name="title" xsi:type="string" translate="true">Question 1</argument>
                        <argument name="content" xsi:type="string" translate="true">Lorem ipsum dolor sit, amet consectetur adipisicing elit.</argument>
                    </arguments>
                </block>
                <block name="accordion-item-2">
                    <arguments>
                        <argument name="title" xsi:type="string" translate="true">Question 2</argument>
                        <argument name="content" xsi:type="string" translate="true">Lorem ipsum dolor sit, amet consectetur adipisicing elit.</argument>
                        <argument name="open" xsi:type="boolean">true</argument>
                        <argument name="icon" xsi:type="string">heroicons/outline/speakerphone</argument>
                    </arguments>
                </block>
                <block name="accordion-item-3">
                    <arguments>
                        <argument name="title" xsi:type="string" translate="true">Question 3</argument>
                    </arguments>
                    <block class="Magento\Framework\View\Element\Text">
                        <arguments>
                            <argument name="text" xsi:type="string"><![CDATA[
                                <div class="prose">
                                    <p class="lead">Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
                                    <p>Iusto itaque voluptatibus iste minima libero harum repellat!</p>
                                <div>
                            ]]></argument>
                        </arguments>
                    </block>
                </block>
            </block>
            <block name="slider-a" template="Magento_Theme::elements/slider-a.phtml">
                <arguments>
                    <argument name="show_arrows" xsi:type="string">end</argument> <!-- Show Slider nav arrows (true/false/start/end) -->
                    <argument name="show_dots" xsi:type="boolean">true</argument> <!-- Show dots (true/false) -->
                    <argument name="load_first_eager" xsi:type="boolean">false</argument> <!-- Load the first slider image eager (true/false) -->
                </arguments>
            </block>
            <block name="slider-b" template="Magento_Theme::elements/slider-b.phtml">
                <arguments>
                    <argument name="show_title" xsi:type="boolean">true</argument> <!-- Show Title above the Slider -->
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
