<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="header.container">
            <block class="Magento\Framework\View\Element\Template"
                   name="gardenlawn.website.switcher"
                   template="Magento_Theme::html/website_switcher.phtml"
                   before="-">
                <arguments>
                    <argument name="view_model" xsi:type="object">GardenLawn\Core\ViewModel\WebsiteSwitcher</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="head.additional">
            <block name="js.sticky.header" template="Magento_Theme::page/js/sticky-header.phtml">
                <arguments>
                    <argument name="hide_on_scroll_down" xsi:type="boolean">false
                    </argument> <!-- Hide sticky header on scroll down (true/false) -->
                    <argument name="scroll_offset" xsi:type="number">100
                    </argument> <!-- Offset before the helper reflects the scrollDir -->
                    <argument name="enable_css_only_sticky_style" xsi:type="boolean">true
                    </argument> <!-- Enable CSS only solution (true/false) -->
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="js.scroll.helpers" template="Magento_Theme::page/js/scroll-helpers.phtml"/>
            <block name="scroll.to.top" template="Magento_Theme::scroll-to-top.phtml">
                <arguments>
                    <argument name="visible_offset" xsi:type="number">200
                    </argument> <!-- Offset before showing the button -->
                    <argument name="visible_only_to_top" xsi:type="boolean">true
                    </argument> <!-- Only show when scrolling to top (true/false) -->
                    <argument name="hide_on_inactivity" xsi:type="number">4000</argument> <!-- Hide after x ms -->
                    <argument name="has_sticky_header" xsi:type="boolean">true
                    </argument> <!-- Add support for sticky header (true/false) -->
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="script-alpine-js">
            <block name="alpine-plugin-ajax-cart" template="Magento_Theme::page/js/plugins/ajax-cart.phtml">
                <arguments>
                    <argument name="delay" xsi:type="number">500
                    </argument> <!-- Extra delay in milliseconds added to the loader (true/false) -->
                    <argument name="show_sku" xsi:type="boolean">true</argument> <!-- Show Sku (true/false) -->
                    <argument name="display_on_success" xsi:type="string">modal
                    </argument> <!-- What to show on success (false/minicart/modal) -->
                </arguments>
            </block>
            <block name="alpine-plugin-collapse" template="Magento_Theme::page/js/plugins/collapse.phtml"/>
        </referenceBlock>
        <referenceBlock name="breadcrumbs">
            <arguments>
                <argument name="show_back_btn" xsi:type="boolean">true
                </argument> <!-- Show back button on mobile (true/false) -->
                <argument name="overflow_style" xsi:type="string">sticky
                </argument> <!-- Overflow style (normal/sticky) -->
            </arguments>
        </referenceBlock>
        <referenceContainer name="footer-content-before">
            <block name="footer-cta" template="Magento_Theme::html/footer/cta.phtml"/>
        </referenceContainer>
        <referenceContainer name="footer-content-after">
            <block name="footer-usps" template="Magento_Theme::html/footer/usps.phtml" before="-"/>
        </referenceContainer>
        <referenceBlock name="after.body.start">
            <block name="header-notification" template="Magento_Theme::html/header/notification.phtml"
                   after="global_notices"/>
        </referenceBlock>
        <referenceBlock name="header-content">
            <arguments>
                <argument name="show_compare" xsi:type="boolean">true
                </argument> <!-- Show compare button (true/false) -->
                <argument name="show_wishlist" xsi:type="boolean">true
                </argument> <!-- Show wishlist button (true/false) -->
                <argument name="show_language" xsi:type="boolean">true
                </argument> <!-- Show language select (true/false) -->
            </arguments>
            <block name="header.compare" as="compare" template="Magento_Theme::html/header/compare.phtml"/>
            <block
                name="topmenu_mobile_wrapper"
                as="mobilemenu"
                template="Magento_Theme::html/header/mobilemenu.phtml"
                ttl="3600"
            >
                <arguments>
                    <argument name="cache_lifetime" xsi:type="string">3600</argument>
                </arguments>
            </block>
        </referenceBlock>
        <move element="topmenu_mobile" destination="topmenu_mobile_wrapper"/>
        <referenceBlock name="top.container">
            <block name="header-usps" template="Magento_Theme::html/header/usps.phtml" before="-"/>
        </referenceBlock>
        <referenceBlock name="topmenu_desktop">
            <arguments>
                <argument name="open_top_level_menu_on_hover" xsi:type="boolean">true
                </argument> <!-- Also open on hover (true/false)-->
                <argument name="show_top_level_all_link" xsi:type="boolean">true
                </argument> <!-- Show view all link for top level (true/false) -->
                <argument name="top_menu_cta_item" xsi:type="string" translate="true">Sale
                </argument> <!-- Top Menu Item to Highlight -->
            </arguments>
        </referenceBlock>
        <referenceBlock name="cart-drawer">
            <arguments>
                <argument name="show_sku" xsi:type="boolean">true
                </argument> <!-- Show sku in product options (true/false) -->
                <argument name="qty_style" xsi:type="string">incrementor
                </argument> <!-- Qty style (text/input/select/incrementor) -->
            </arguments>
        </referenceBlock>
        <block name="cart-drawer.qtybox" template="Magento_Theme::html/cart/qtybox.phtml"/>
        <referenceBlock name="messages">
            <arguments>
                <argument name="display_mode" xsi:type="string">tag
                </argument> <!-- Notification appearance (default/blank/tag) -->
                <argument name="show_icon" xsi:type="boolean">true</argument> <!-- Show icon (true/false) -->
            </arguments>
        </referenceBlock>
    </body>
</page>
