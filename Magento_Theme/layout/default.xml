<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="top.container">
            <block name="header-usps" template="Magento_Theme::html/header/usps.phtml" before="-"/>
        </referenceBlock>

        <referenceBlock name="header-content">
            <arguments>
                <argument name="show_compare" xsi:type="boolean">true
                </argument> <!-- Show compare button (true/false) -->
                <argument name="show_wishlist" xsi:type="boolean">true
                </argument> <!-- Show wishlist button (true/false) -->
                <argument name="show_language" xsi:type="boolean">true
                </argument> <!-- Show language select (true/false) -->
            </arguments>
            <block
                name="topmenu_mobile_wrapper"
                as="mobilemenu"
                template="Magento_Theme::html/header/mobilemenu.phtml"
                ttl="36000"
            >
                <arguments>
                    <argument name="cache_lifetime" xsi:type="string">36000</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="header.container">
            <block class="Magento\Framework\View\Element\Template"
                   name="gardenlawn.website.switcher"
                   template="Magento_Theme::html/website_switcher.phtml"
                   before="-">
                <arguments>
                    <argument name="view_model" xsi:type="object">GardenLawn\Core\ViewModel\WebsiteSwitcher</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="head.additional">
            <block name="js.sticky.header" template="Magento_Theme::page/js/sticky-header.phtml">
                <arguments>
                    <argument name="hide_on_scroll_down" xsi:type="boolean">false
                    </argument> <!-- Hide sticky header on scroll down (true/false) -->
                    <argument name="scroll_offset" xsi:type="number">100
                    </argument> <!-- Offset before the helper reflects the scrollDir -->
                    <argument name="enable_css_only_sticky_style" xsi:type="boolean">false
                    </argument> <!-- Enable CSS only solution (true/false) -->
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="topmenu_desktop">
            <arguments>
                <argument name="open_top_level_menu_on_hover" xsi:type="boolean">true
                </argument> <!-- Also open on hover (true/false)-->
                <argument name="max_level" xsi:type="number">4</argument> <!-- Max Menu depth to show -->
                <argument name="top_menu_cta_item" xsi:type="string" translate="true">Sale
                </argument> <!-- top Menu Item to Highlight -->
            </arguments>
            <block
                name="topmenu_desktop_item"
                template="Magento_Theme::html/header/menu/desktop-item.phtml"
            />
        </referenceBlock>

        <referenceBlock name="topmenu_mobile">
            <block name="topmenu_mobile_item" template="Magento_Theme::html/header/menu/mobile-item.phtml"/>
            <arguments>
                <argument name="max_level" xsi:type="number">4</argument> <!-- Max Menu depth to show -->
                <argument name="show_search" xsi:type="boolean">true</argument> <!-- Show Search (true/false) -->
                <argument name="show_socials" xsi:type="boolean">true</argument> <!-- Show Social Icons (true/false) -->
                <argument name="show_settings_nav" xsi:type="boolean">true
                </argument> <!-- Show Settings Nav (true/false) -->

                <argument name="additional_menu_items_before" xsi:type="array">
                    <item name="home" xsi:type="array">
                        <item name="url" xsi:type="string">/</item>
                        <item name="name" xsi:type="string" translate="true">O nas</item>
                    </item>
                </argument>

                <argument name="additional_menu_items" xsi:type="array">
                    <!-- <item name="contact" xsi:type="array">
                        <item name="url" xsi:type="string">contact</item>
                        <item name="name" xsi:type="string" translate="true">Contact</item>
                    </item> -->
                </argument>
            </arguments>

            <block
                class="Magento\Theme\Block\Html\Header\Logo"
                name="topmenu_mobile.logo"
                template="Magento_Theme::html/header/menu/mobile-logo.phtml"
                as="logo"
            >
                <arguments>
                    <argument name="max_width" xsi:type="number">104</argument>
                    <argument name="max_height" xsi:type="number">48</argument>
                </arguments>
            </block>
            <block name="topmenu_mobile.search" as="search" template="Magento_Theme::html/header/simple-search.phtml"/>
            <block name="topmenu_mobile.social" as="socials" template="Magento_Theme::html/header/social-icons.phtml"/>

            <container name="topmenu_mobile.additional.wrapper" as="additional">
                <block name="topmenu_mobile.cta" template="Magento_Theme::html/header/menu/mobile-cta.phtml"/>
                <container name="topmenu_mobile.additional" label="Mobile Menu Footer"/>
            </container>
        </referenceBlock>

        <referenceBlock name="breadcrumbs">
            <arguments>
                <argument name="show_back_btn" xsi:type="boolean">true
                </argument> <!-- Show back button on mobile (true/false) -->
                <argument name="overflow_style" xsi:type="string">sticky
                </argument> <!-- Overflow style (normal/sticky) -->
            </arguments>
        </referenceBlock>

        <referenceContainer name="before.body.end">
            <block name="js.scroll.helpers" template="Magento_Theme::page/js/scroll-helpers.phtml"/>
            <block name="scroll.to.top" template="Magento_Theme::scroll-to-top.phtml">
                <arguments>
                    <argument name="visible_offset" xsi:type="number">200
                    </argument> <!-- Offset before showing the button -->
                    <argument name="visible_only_to_top" xsi:type="boolean">true
                    </argument> <!-- Only show when scrolling to top (true/false) -->
                    <argument name="hide_on_inactivity" xsi:type="number">4000</argument> <!-- Hide after x ms -->
                    <argument name="has_sticky_header" xsi:type="boolean">true
                    </argument> <!-- Add support for sticky header (true/false) -->
                </arguments>
            </block>
            <block name="splide-js" template="Magento_Theme::page/js/splide-js.phtml"/>
        </referenceContainer>

        <referenceBlock name="script-alpine-js">
            <block name="alpine-plugin-ajax-cart" template="Magento_Theme::page/js/plugins/ajax-cart.phtml">
                <arguments>
                    <argument name="delay" xsi:type="number">500
                    </argument> <!-- Extra delay in milliseconds added to the loader (true/false) -->
                    <argument name="show_sku" xsi:type="boolean">true</argument> <!-- Show Sku (true/false) -->
                    <argument name="display_on_success" xsi:type="string">modal
                    </argument> <!-- What to show on success (false/minicart/modal) -->
                </arguments>
            </block>
            <block name="alpine-plugin-collapse" template="Magento_Theme::page/js/plugins/collapse.phtml"/>
            <block name="alpine-plugin-htmldialog" template="Magento_Theme::page/js/plugins/htmldialog.phtml"/>
            <block name="alpine-plugin-snap-slider" template="Magento_Theme::page/js/plugins/snap-slider.phtml"/>
        </referenceBlock>

        <referenceBlock name="cart-drawer">
            <arguments>
                <argument name="show_sku" xsi:type="boolean">true
                </argument> <!-- Show sku in product options (true/false) -->
                <argument name="qty_style" xsi:type="string">incrementor
                </argument> <!-- Qty style (text/input/select/incrementor) -->
            </arguments>
        </referenceBlock>
        <block name="cart-drawer.qtybox" template="Magento_Theme::html/cart/qtybox.phtml"/>

        <referenceBlock name="messages">
            <arguments>
                <argument name="display_mode" xsi:type="string">tag
                </argument> <!-- Notification appearance (default/blank/tag) -->
                <argument name="show_icon" xsi:type="boolean">true</argument> <!-- Show icon (true/false) -->
            </arguments>
        </referenceBlock>

        <move element="footer-static-links" destination="footer_column_1"/>

        <referenceBlock name="footer-content">
            <container name="footer-content-before"/>
            <block name="footer_column_1" template="Magento_Theme::html/footer/collapse.phtml">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Shop</argument>
                    <argument name="open" xsi:type="boolean">true
                    </argument> <!-- Set the collapse to be open by default on mobile (true/false) -->
                </arguments>
            </block>
            <block name="footer_column_2" template="Magento_Theme::html/footer/collapse.phtml" after="footer_column_1">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Customer Service</argument>
                </arguments>
                <block name="footer-static-links-services" template="Magento_Theme::html/footer/links-services.phtml"/>
            </block>
            <block name="footer_column_3" template="Magento_Theme::html/footer/collapse.phtml" after="footer_column_2">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Our Company</argument>
                </arguments>
                <block name="footer-static-links-company" template="Magento_Theme::html/footer/links-company.phtml"/>
            </block>
            <block name="footer_column_4" template="Magento_Theme::html/footer/collapse.phtml" after="footer_column_3">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">My Account</argument>
                </arguments>
            </block>
            <container name="footer-content-after">
                <block name="footer-payment" template="Magento_Theme::html/footer/payment.phtml"/>
            </container>
        </referenceBlock>

        <referenceBlock name="after.body.start">
            <block name="header-notification" template="Magento_Theme::html/header/notification.phtml"
                   after="global_notices"/>
        </referenceBlock>
    </body>
</page>
