                            <?php if ($showTopLevelAllLink): ?>
                                <div class="mt-4 border-t border-slate-100">
                                    <a
                                        href="<?= $escaper->escapeUrl($item['url']) ?>"
                                        class="level-0 block pt-3 hover:underline aria-[current=page]:underline"
                                    ><?= $escaper->escapeHtml(__('See all %1', $item['name'])) ?></a>
                                </div>
                            <?php endif; ?>
