                        class="z-30 absolute inset-x-0 flex gap-8 container py-6 min-h-64 border-t border-slate-100
                            rounded-b-md bg-white shadow-md overflow-auto"
                        x-show="open"
                        x-transition
                        x-cloak
                    >
                        <div class="grow flex flex-col justify-between">
                            <ul class="columns-xs gap-8">
                                <?php foreach ($item['childData'] as $subMenu): ?>
                                    <li class="break-inside-avoid pb-4">
                                        <a
                                            href="<?= $escaper->escapeUrl($subMenu['url']) ?>"
                                            class="level-1 block py-1 font-semibold text-slate-800 hover:underline aria-[current=page]:underline"
                                        ><?= $escaper->escapeHtml($subMenu['name']) ?></a>
                                        <?php if (!empty($subMenu['childData'])): ?>
                                            <ul class="pl-3 pt-1">
                                                <?php foreach ($subMenu['childData'] as $subMenuItems): ?>
                                                    <li>
                                                        <a
                                                            href="<?= $escaper->escapeUrl($subMenuItems['url']) ?>"
                                                            class="level-2 block py-1 text-sm text-slate-600 hover:text-blue-500 hover:underline aria-[current=page]:underline"
